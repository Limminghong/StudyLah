<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lightblue_background"
    tools:context=".createSession"
    tools:layout_editor_absoluteY="25dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        android:background="#4FC1E9"
        app:layout_constraintBottom_toTopOf="@+id/editTextViewModule"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Edit Session"
        app:titleTextColor="@color/white" />

    <Button
        android:id="@+id/buttonEditInfo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/box_without_text"
        android:fontFamily="@font/poiret_one"
        android:text="Edit Information"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editButtonEdit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editEditTextLocation" />

    <TextView
        android:id="@+id/editTextViewDate"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginEnd="29dp"
        android:layout_marginStart="26dp"
        android:background="@drawable/box_without_text"
        android:fontFamily="@font/poiret_one"
        android:text="Date:"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/editTextTimingTo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.526" />

    <EditText
        android:id="@+id/editEditTextDate"
        android:layout_width="332dp"
        android:layout_height="38dp"
        android:layout_marginBottom="29dp"
        android:ems="10"
        android:fontFamily="@font/poiret_one"
        android:hint="Select Date"
        android:inputType="date"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/editTextViewLocation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTimingFrom" />

    <TextView
        android:id="@+id/editTextViewLocation"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:background="@drawable/box_without_text"
        android:fontFamily="@font/poiret_one"
        android:text="Location:"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/editEditTextLocation"
        app:layout_constraintStart_toStartOf="@+id/editEditTextLocation"
        app:layout_constraintTop_toBottomOf="@+id/editEditTextDate" />

    <EditText
        android:id="@+id/editEditTextLocation"
        android:layout_width="334dp"
        android:layout_height="39dp"
        android:layout_marginBottom="26dp"
        android:ems="10"
        android:fontFamily="@font/poiret_one"
        android:hint="Enter Location"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/buttonEditInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextViewLocation" />

    <Button
        android:id="@+id/editButtonEdit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="23dp"
        android:background="@drawable/box_without_text"
        android:fontFamily="@font/poiret_one"
        android:text="Edit"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editButtonDelete"
        app:layout_constraintTop_toBottomOf="@+id/buttonEditInfo" />

    <TextView
        android:id="@+id/editTextViewModule"
        android:layout_width="176dp"
        android:layout_height="0dp"
        android:layout_marginBottom="64dp"
        android:layout_marginStart="25dp"
        android:background="@drawable/box_without_text"
        android:fontFamily="@font/poiret_one"
        android:text="Modules: "
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextViewTiming"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <AutoCompleteTextView
        android:id="@+id/editAutoModule"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toTopOf="@+id/editTextViewTiming"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editTextViewModule" />

    <TextView
        android:id="@+id/editTextViewTiming"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="35dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/box_without_text"
        android:fontFamily="@font/poiret_one"
        android:text="Timing:"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/editEditTextTiming2"
        app:layout_constraintEnd_toEndOf="@+id/editTextTimingTo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextViewModule" />

    <EditText
        android:id="@+id/editEditTextTiming"
        android:layout_width="109dp"
        android:layout_height="45dp"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:fontFamily="@font/poiret_one"
        android:hint="Select Time"
        android:inputType="time"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextViewDate"
        app:layout_constraintEnd_toStartOf="@+id/editTextTimingTo"
        app:layout_constraintStart_toEndOf="@+id/editTextTimingFrom"
        app:layout_constraintTop_toTopOf="@+id/editTextViewTiming"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/editButtonDelete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="85dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/box_without_text"
        android:fontFamily="@font/poiret_one"
        android:text="Delete"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/editButtonEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonEditInfo" />

    <EditText
        android:id="@+id/editEditTextTiming2"
        android:layout_width="108dp"
        android:layout_height="38dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:fontFamily="@font/poiret_one"
        android:hint="Select Time"
        android:inputType="time"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextTimingFrom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editTextTimingTo"
        app:layout_constraintTop_toBottomOf="@+id/editTextViewTiming" />

    <TextView
        android:id="@+id/editTextTimingFrom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="77dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="26dp"
        android:background="@drawable/box_without_text"
        android:fontFamily="@font/poiret_one"
        android:text="From:"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toTopOf="@+id/editEditTextDate"
        app:layout_constraintEnd_toStartOf="@+id/editEditTextTiming"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editEditTextTiming2" />

    <TextView
        android:id="@+id/editTextTimingTo"
        android:layout_width="0dp"
        android:layout_height="23dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/box_without_text"
        android:fontFamily="@font/poiret_one"
        android:text="To:"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="@+id/editEditTextTiming2"
        app:layout_constraintEnd_toStartOf="@+id/editEditTextTiming2"
        app:layout_constraintStart_toEndOf="@+id/editEditTextTiming"
        app:layout_constraintTop_toBottomOf="@+id/editTextViewTiming"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".createSession"
    tools:layout_editor_absoluteY="25dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginBottom="3dp"
        android:background="#4FC1E9"
        app:title="Edit Session"
        app:titleTextColor="@color/white" />

    <Button
        android:id="@+id/buttonEditInfo"
        android:layout_width="360dp"
        android:layout_height="0dp"
        android:layout_marginBottom="76dp"
        android:background="@drawable/box_login_final2"
        android:fontFamily="@font/poiret_one"
        android:text="Edit Information"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editEditTextLocation" />

    <TextView
        android:id="@+id/editTextViewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/box_login_final2"
        android:fontFamily="@font/poiret_one"
        android:text="Date:"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/editEditTextDate"
        app:layout_constraintStart_toStartOf="@+id/editEditTextDate"
        app:layout_constraintTop_toBottomOf="@+id/editTextViewTiming" />

    <EditText
        android:id="@+id/editEditTextDate"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="26dp"
        android:layout_marginStart="26dp"
        android:ems="10"
        android:fontFamily="@font/poiret_one"
        android:hint="Select Date"
        android:inputType="date"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/editTextViewLocation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextViewDate" />

    <TextView
        android:id="@+id/editTextViewLocation"
        android:layout_width="84dp"
        android:layout_height="32dp"
        android:layout_marginStart="1dp"
        android:background="@drawable/box_login_final2"
        android:fontFamily="@font/poiret_one"
        android:text="Location:"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/editEditTextLocation"
        app:layout_constraintStart_toStartOf="@+id/editEditTextLocation"
        app:layout_constraintTop_toBottomOf="@+id/editEditTextDate" />

    <EditText
        android:id="@+id/editEditTextLocation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:ems="10"
        android:fontFamily="@font/poiret_one"
        android:hint="Enter Location"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/buttonEditInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextViewLocation" />

    <Button
        android:id="@+id/editButtonEdit"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/box_login_final2"
        android:fontFamily="@font/poiret_one"
        android:text="Edit"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editButtonDelete" />

    <TextView
        android:id="@+id/editTextViewModule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/box_login_final2"
        android:fontFamily="@font/poiret_one"
        android:text="Modules: "
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/editAutoModule"
        app:layout_constraintStart_toStartOf="@+id/editAutoModule"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <AutoCompleteTextView
        android:id="@+id/editAutoModule"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="26dp"
        android:layout_marginStart="26dp"
        android:ems="10"
        android:textColor="@color/cardview_light_background"
        app:layout_constraintBottom_toTopOf="@+id/editTextViewTiming"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextViewModule" />

    <TextView
        android:id="@+id/editTextViewTiming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="67dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/box_login_final2"
        android:fontFamily="@font/poiret_one"
        android:text="Timing:"
        android:textAlignment="center"
        android:textColor="@color/cardview_light_background"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextViewDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editAutoModule" />

    <EditText
        android:id="@+id/editEditTextTiming"
        android:layout_width="106dp"
        android:layout_height="45dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:fontFamily="@font/poiret_one"
        android:hint="Select Time"
        android:inputType="time"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/editTextTimingFrom"
        app:layout_constraintTop_toBottomOf="@+id/editTextViewTiming" />

    <Button
        android:id="@+id/editButtonDelete"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="88dp"
        android:layout_marginStart="26dp"
        android:background="@drawable/box_login_final2"
        android:fontFamily="@font/poiret_one"
        android:text="Delete"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/editButtonEdit"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editEditTextTiming2"
        android:layout_width="106dp"
        android:layout_height="45dp"
        android:layout_marginEnd="88dp"
        android:ems="10"
        android:fontFamily="@font/poiret_one"
        android:hint="Select Time"
        android:inputType="time"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/editTextTimingTo"
        app:layout_constraintTop_toTopOf="@+id/editEditTextTiming" />

    <TextView
        android:id="@+id/editTextTimingFrom"
        android:layout_width="42dp"
        android:layout_height="24dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/box_login_final2"
        android:fontFamily="@font/poiret_one"
        android:text="From:"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/editAutoModule"
        app:layout_constraintTop_toBottomOf="@+id/editTextViewTiming" />

    <TextView
        android:id="@+id/editTextTimingTo"
        android:layout_width="31dp"
        android:layout_height="23dp"
        android:background="@drawable/box_login_final2"
        android:fontFamily="@font/poiret_one"
        android:text="To:"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/editEditTextTiming"
        app:layout_constraintTop_toTopOf="@+id/editTextTimingFrom" />
</android.support.constraint.ConstraintLayout>
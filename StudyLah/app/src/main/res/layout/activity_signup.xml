<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity"
    tools:layout_editor_absoluteY="25dp"
    android:background="@drawable/book_login"
    android:id="@+id/relativeLayout2">

    <EditText
        android:id="@+id/editTextEmailSignup"
        android:layout_width="359dp"
        android:layout_height="69dp"
        android:background="@drawable/box_final"
        android:ems="10"
        android:fontFamily="@font/poiret_one"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="259dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/editTextPasswordSignup"
        android:layout_width="359dp"
        android:layout_height="70dp"
        android:layout_marginBottom="195dp"
        android:background="@drawable/box_final"
        android:ems="10"
        android:fontFamily="@font/poiret_one"
        android:hint="Password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="352dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/buttonSignup"
        android:layout_width="308dp"
        android:layout_height="51dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/box_final"
        android:fontFamily="@font/poiret_one"
        android:text="Sign Up"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="436dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="359dp"
        android:layout_height="70dp"
        android:layout_marginBottom="112dp"
        android:background="@drawable/box_login_final"
        android:ems="10"
        android:fontFamily="@font/poiret_one"
        android:hint="Username"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/cardview_light_background"
        android:textColorHint="@color/white"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="352dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="290dp"
        android:layout_height="110dp"
        android:layout_marginTop="113dp"
        app:srcCompat="@drawable/studylah_final"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/ball1"
        android:layout_width="17dp"
        android:layout_height="26dp"
        app:srcCompat="@drawable/decoration_ball"
        app:layout_constraintTop_toBottomOf="@+id/ball4"
        app:layout_constraintEnd_toStartOf="@+id/editTextEmailSignup" />

    <ImageView
        android:id="@+id/ball4"
        android:layout_width="30dp"
        android:layout_height="38dp"
        android:layout_marginStart="13dp"
        app:srcCompat="@drawable/decoration_ball"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ball3"
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="68dp"
        app:srcCompat="@drawable/decoration_ball"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ball2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        app:srcCompat="@drawable/decoration_ball"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ball3" />

    <ImageView
        android:id="@+id/ball"
        android:layout_width="73dp"
        android:layout_height="68dp"
        android:layout_marginTop="11dp"
        app:srcCompat="@drawable/decoration_ball"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ball2" />
</android.support.constraint.ConstraintLayout>
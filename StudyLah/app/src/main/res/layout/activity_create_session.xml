<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lightblue_background"
    tools:context=".createSession"
    tools:layout_editor_absoluteY="25dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:background="#4FC1E9"
        app:layout_constraintBottom_toTopOf="@+id/textViewModule"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Create Session"
        app:titleTextColor="@color/white" />

    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="26dp"
        android:background="@drawable/box_without_text"
        android:fontFamily="@font/poiret_one"
        android:text="Date:"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextDate"
        app:layout_constraintEnd_toEndOf="@+id/textTimingTo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTimingFrom" />

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="332dp"
        android:layout_height="41dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:fontFamily="@font/poiret_one"
        android:hint="Select Date"
        android:inputType="date"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/textViewLocation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDate" />

    <TextView
        android:id="@+id/textViewLocation"
        android:layout_width="84dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:background="@drawable/box_without_text"
        android:fontFamily="@font/poiret_one"
        android:text="Location:"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextLocation"
        app:layout_constraintStart_toStartOf="@+id/editTextLocation"
        app:layout_constraintTop_toBottomOf="@+id/editTextDate" />

    <EditText
        android:id="@+id/editTextLocation"
        android:layout_width="334dp"
        android:layout_height="0dp"
        android:layout_marginBottom="11dp"
        android:ems="10"
        android:fontFamily="@font/poiret_one"
        android:hint="Enter Location"
        android:inputType="textPersonName"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/buttonInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewLocation" />

    <Button
        android:id="@+id/buttonCreate"
        android:layout_width="360dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/box_without_text"
        android:fontFamily="@font/poiret_one"
        android:text="Create"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewModule"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/box_without_text"
        android:fontFamily="@font/poiret_one"
        android:text="Modules: "
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/autoModule"
        app:layout_constraintEnd_toEndOf="@+id/textViewTiming"
        app:layout_constraintStart_toStartOf="@+id/autoModule"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <AutoCompleteTextView
        android:id="@+id/autoModule"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginBottom="29dp"
        android:layout_marginEnd="26dp"
        android:layout_marginStart="26dp"
        android:ems="10"
        android:fontFamily="@font/poiret_one"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toTopOf="@+id/textViewTiming"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewModule" />

    <TextView
        android:id="@+id/textViewTiming"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="11dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="26dp"
        android:background="@drawable/box_without_text"
        android:fontFamily="@font/poiret_one"
        android:text="Timing:"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextTiming2"
        app:layout_constraintEnd_toEndOf="@+id/textTimingTo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/autoModule" />

    <EditText
        android:id="@+id/editTextTiming"
        android:layout_width="109dp"
        android:layout_height="0dp"
        android:layout_marginEnd="36dp"
        android:ems="10"
        android:fontFamily="@font/poiret_one"
        android:hint="Select Time"
        android:inputType="time"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/editTextTiming2"
        app:layout_constraintEnd_toStartOf="@+id/textTimingTo"
        app:layout_constraintStart_toEndOf="@+id/textTimingFrom"
        app:layout_constraintTop_toTopOf="@+id/editTextTiming2"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/buttonInfo"
        android:layout_width="360dp"
        android:layout_height="0dp"
        android:layout_marginBottom="75dp"
        android:background="@drawable/box_without_text"
        android:fontFamily="@font/poiret_one"
        android:text="Add Information"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextLocation" />

    <TextView
        android:id="@+id/textTimingFrom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="17dp"
        android:layout_marginStart="26dp"
        android:background="@drawable/box_without_text"
        android:fontFamily="@font/poiret_one"
        android:text="From: "
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toTopOf="@+id/textViewDate"
        app:layout_constraintEnd_toStartOf="@+id/editTextTiming"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTiming2" />

    <TextView
        android:id="@+id/textTimingTo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/box_without_text"
        android:fontFamily="@font/poiret_one"
        android:text="To: "
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="@+id/textTimingFrom"
        app:layout_constraintEnd_toStartOf="@+id/editTextTiming2"
        app:layout_constraintStart_toEndOf="@+id/editTextTiming"
        app:layout_constraintTop_toTopOf="@+id/textTimingFrom"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editTextTiming2"
        android:layout_width="102dp"
        android:layout_height="41dp"
        android:layout_marginEnd="26dp"
        android:ems="10"
        android:fontFamily="@font/poiret_one"
        android:hint="Select Time"
        android:inputType="time"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textTimingFrom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textTimingTo"
        app:layout_constraintTop_toBottomOf="@+id/textViewTiming" />
</android.support.constraint.ConstraintLayout>